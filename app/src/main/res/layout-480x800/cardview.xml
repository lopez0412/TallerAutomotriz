<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/cardView"
    android:layout_margin="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/list_item_google_cards_shop_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"

            android:transitionName="card"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:background="#b3000000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:gravity="right"
            android:orientation="vertical"
            android:padding="8dp"
            >

            <TextView
                android:id="@+id/list_item_google_cards_shop_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginTop="8dp"
                android:textColor="#b62025"
                android:textSize="20sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/desde"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="8dp"
                    android:background="@android:color/transparent"
                    android:textColor="#b62025"
                    android:textSize="25sp"
                    android:text="Desde: "

                    />
                <TextView
                    android:id="@+id/list_item_google_cards_shop_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="8dp"
                    android:background="@android:color/transparent"
                    android:textColor="#b62025"
                    android:textSize="25sp"

                    />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout></android.support.v7.widget.CardView>