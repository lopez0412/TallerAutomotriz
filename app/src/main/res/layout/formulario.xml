<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lopez.tallerautomotriz.Formulario"
    android:transitionName="fab">

    <LinearLayout
        android:id="@+id/area_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="107dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:transitionName="fab">

        <ImageView
            android:id="@+id/img_fecha"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/calendar" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/Hint2"
            android:layout_marginLeft="32dp"

            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fecha"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="80dp"
                android:layout_alignParentEnd="true"

                android:hint="Fecha" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/area_hora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:transitionName="fab"
        android:layout_below="@+id/area_fecha"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/clock"
            />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/Hint2"
            android:layout_marginLeft="32dp"

            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hora"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="80dp"
                android:layout_alignParentEnd="true"
                android:hint="Hora"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trae la Parte"
        android:id="@+id/checkBox"
        android:layout_below="@+id/area_hora"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:id="@+id/envia_res"
        android:background="@drawable/button_circle_border2"
        android:textColor="#fff"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true"
        android:layout_marginTop="119dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/cancelar"
        android:background="@drawable/button_circle_border2"
        android:textColor="#fff"
        android:layout_alignBottom="@+id/envia_res"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
